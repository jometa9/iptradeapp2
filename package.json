{
  "name": "iptradeapp",
  "private": true,
  "version": "1.2.1",
  "description": "Professional Trading Platform with Copy Trading Capabilities",
  "author": "IPTRADE",
  "type": "module",
  "main": "electron/main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:server\"",
    "dev:frontend": "vite --port 5174",
    "dev:server": "node server/src/dev.js",
    "build": "vite build --mode production",
    "build:no-check": "vite build --mode production",
    "build:force": "vite build --mode production",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"cross-env NODE_ENV=development vite --port 5174\" \"wait-on http://localhost:5174 && cross-env VITE_PORT=5174 electron .\"",
    "electron:build": "npm run build && electron-builder --win --publish=never",
    "electron:build:ci": "npm run build && electron-builder --win --publish=always",
    "electron:preview": "electron .",
    "build:server": "npm run build --prefix server",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "publish": "npm run build && electron-builder --win --publish=always",
    "release": "npm run electron:build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write . && eslint . --fix",
    "test:accounts": "node scripts/manage-test-accounts.cjs",
    "test:accounts:generate": "node scripts/manage-test-accounts.cjs generate",
    "test:accounts:cleanup": "node scripts/manage-test-accounts.cjs cleanup",
    "test:accounts:reset": "node scripts/manage-test-accounts.cjs reset",
    "clean:mac": "node scripts/clean-csv-mac.js",
    "check:csv": "node scripts/check-csv-cache.js",
    "reset:permissions": "node scripts/reset-macos-permissions.js",
    "check:permissions": "node scripts/check-macos-permissions.js"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "canvas": "^3.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "cva": "^0.0.0",
    "electron-updater": "^6.3.11",
    "express": "^5.1.0",
    "lucide-react": "^0.511.0",
    "node-fetch": "^3.3.2",
    "radix-ui": "^1.4.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.57.0",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tailwindcss/postcss": "^4.1.8",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.5",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eventsource": "^4.0.0",
    "globals": "^16.0.0",
    "postcss": "^8.5.4",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.8",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.iptrade.app",
    "productName": "IPTRADE",
    "icon": "public/iconShadow025.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "public/dmg-installer.png",
      "electron/**/*",
      "server/src/**/*",
      "server/config/**/*",
      "server/package.json",
      "!server/node_modules/**/*",
      "!server/**/*.map"
    ],
    "extraResources": [
      {
        "from": "server/src",
        "to": "server/src",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "server/config",
        "to": "server/config",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "jometa9",
        "repo": "iptradeapp2",
        "private": false,
        "releaseType": "release"
      }
    ],
    "win": {
      "icon": "public/iconShadow025.png",
      "target": "nsis",
      "artifactName": "IPTRADE.exe"
    }
  }
}
